doctype html
html(lang="en")
head
  include head.jade
body
  include nav.jade

  div.container
    div.header
     if doc._id 
       h1 Edit document #{doc._id}
     else
       h1 Create new document

      
    form(id="doc",onsubmit="return submitDoc();")

      each v, i in fixedfields
        div.form-group
          label(for="#{i}") #{i}
          input.form-control(type="text",id="#{i}",name="#{i}",value="#{doc[i]}")
                  
      each v, i in schema
        div.form-group
          if (i !='_id' && i != '_rev') 
        
            label(for="#{i}") #{i}
            if v.type == "string" 
              if typeof v.enforceValues == "boolean" && v.enforceValues && v.values
                select.form-control(id="#{i}",name="#{i}")
                  each j in v.values
                    option(selected="(#{doc[i]}==j)?'selected':''") #{j}
              else
                input.form-control(id="#{i}",type="text",name="#{i}",value="#{doc[i]}")
            if v.type == "number"
              input.form-control(id="#{i}",type="text",name="#{i}",value="#{doc[i]}")
            if v.type == "boolean"
              select.form-control(id="#{i}",name="#{i}")
                each j in ["false","true"]
                  option(selected="(#{doc[i]}==j)?'selected':''") #{j}
            if v.type == "arrayofstrings"
              input.form-control(id="#{i}",type="text",name="#{i}",data-values="#{v.values.join(',')}",data-role="tagsinput",value="#{doc[i].join(',')}")
              span.help-block #{v.values.join(', ')}
              
      div.form-group#error

      button.btn.btn-default(type="submit") Submit
    
      script(type="text/javascript").
        $( document ).ready(function() {
          $('.bootstrap-tagsinput').addClass('form-control');
        });

